<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal">

    <TextView android:textSize="50sp" android:layout_column="0" android:id="@+id/Computer_value_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="50sp" android:layout_column="0" android:id="@+id/Gamer_value_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="50sp" android:layout_column="0" android:id="@+id/Result_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button  android:layout_column="0" android:id="@+id/Button_Retry" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</GridLayout>